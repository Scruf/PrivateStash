{% extends "layout.html" %}

{% block content %}
    <h3>Delete Appointment</h3>
    <form action="" method="post">{% csrf_token %}
        <p>Are you sure you want to delete the appointment between {{ object.doctor }} and {{ object.patient }} on {{ object.date_scheduled }}?</p>
        <input class="btn btn-primary" type="submit" value="Confirm" />
    </form>
{% endblock %}
